<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" 
      style="-fx-background-color: #DFF2EB;" xmlns="http://javafx.com/javafx/22" 
      xmlns:fx="http://javafx.com/fxml/1" fx:controller="discountcalculatorapp.FXMLDocumentController">
    <children>
        <Text fill="#001a6e" strokeType="OUTSIDE" strokeWidth="0.0" text="Discount Calculator - ValueMart">
            <font>
                <Font name="System Bold" size="24.0" />
            </font>
        </Text>
        <HBox alignment="CENTER_LEFT" prefHeight="36.0" prefWidth="500.0" 
              style="-fx-background-color: white; -fx-background-radius: 10;">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total Amount of Bill">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Text>
                <TextField fx:id="totalAmountField" alignment="CENTER" prefHeight="25.0" prefWidth="328.0" 
                           promptText="Enter the total amount here!" style="-fx-background-color: #FFF8E6;">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </TextField>
            </children>
            <VBox.margin>
                <Insets top="25.0" />
            </VBox.margin>
            <padding>
                <Insets bottom="20.0" left="30.0" right="30.0" top="20.0" />
            </padding>
        </HBox>
        <HBox alignment="CENTER" prefHeight="11.0" prefWidth="500.0" spacing="25.0">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>
                <Button fx:id="clearButton" alignment="CENTER" mnemonicParsing="false" 
                        prefHeight="25.0" prefWidth="196.0" style="-fx-background-color: darkred;" 
                        text="Clear" textAlignment="CENTER" textFill="WHITE" onAction="#clearFields">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
                <Button fx:id="calculateButton" alignment="CENTER" mnemonicParsing="false" 
                        prefHeight="25.0" prefWidth="196.0" style="-fx-background-color: green;" text="Calculate" 
                        textAlignment="CENTER" textFill="WHITE" onAction="#calculateDiscount">
                    <font>
                        <Font name="System Bold" size="12.0" />
                    </font>
                </Button>
            </children>
        </HBox>
        <VBox alignment="CENTER" prefHeight="42.0" prefWidth="500.0">
            <children>
                <HBox alignment="BASELINE_CENTER" prefHeight="34.0" prefWidth="500.0" spacing="5.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Discount:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Text fx:id="discountText" strokeType="OUTSIDE" strokeWidth="0.0" text="-" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Text>
                        <Text fill="#3c3d37" strokeType="OUTSIDE" strokeWidth="0.0" text="LKR" textAlignment="CENTER">
                            <font>
                                <Font name="System Italic" size="12.0" />
                            </font>
                        </Text>
                    </children>
                    <VBox.margin>
                        <Insets bottom="15.0" />
                    </VBox.margin>
                </HBox>
                <HBox alignment="BASELINE_CENTER" prefHeight="34.0" prefWidth="500.0" spacing="5.0">
                    <children>
                        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Total:">
                            <font>
                                <Font size="14.0" />
                            </font>
                        </Text>
                        <Text fx:id="totalText" strokeType="OUTSIDE" strokeWidth="0.0" text="-" textAlignment="CENTER">
                            <font>
                                <Font name="System Bold" size="18.0" />
                            </font>
                        </Text>
                        <Text fill="#3c3d37" strokeType="OUTSIDE" strokeWidth="0.0" text="LKR" textAlignment="CENTER">
                            <font>
                                <Font name="System Italic" size="12.0" />
                            </font>
                        </Text>
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
            </padding>
        </VBox>
    </children>
    <padding>
        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
    </padding>
</VBox>
